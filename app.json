{
  "expo": {
    "name": "Habyss",
    "slug": "Habyss",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/Habyss Logo Black BG.png",
    "scheme": "habyss",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.habyss.app",
      "infoPlist": {
        "NSUserNotificationUsageDescription": "Habyss uses notifications to remind you about your habits and help you stay consistent.",
        "NSPhotoLibraryUsageDescription": "Habyss needs access to your photos to let you set custom backgrounds for your goals.",
        "UIBackgroundModes": [
          "remote-notification"
        ]
      },
      "entitlements": {
        "aps-environment": "development"
      },
      "widgets": [
        {
          "name": "HabyssTodayWidget",
          "family": "systemMedium"
        }
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/Habyss Logo Black BG.png",
        "backgroundColor": "#000000"
      },
      "package": "com.habyss.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/Habyss Logo Black BG.png"
    },
    "plugins": [
      "expo-notifications",
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/Habyss Logo Black BG.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000000"
        }
      ],
      "expo-secure-store",
      "react-native-health-connect",
      "react-native-health"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}