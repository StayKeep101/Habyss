{
  "expo": {
    "name": "Habyss Beta",
    "slug": "Habyss",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/Habyss Logo.png",
    "scheme": "habyss",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.habyss.app",
      "infoPlist": {
        "NSUserNotificationUsageDescription": "Habyss uses notifications to remind you about your habits and help you stay consistent.",
        "NSPhotoLibraryUsageDescription": "Habyss needs access to your photos to let you set custom backgrounds for your goals.",
        "UIBackgroundModes": [
          "remote-notification"
        ]
      },
      "entitlements": {
        "aps-environment": "development"
      },
      "widgets": [
        {
          "name": "HabyssTodayWidget",
          "family": "systemMedium"
        }
      ]
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/Habyss Logo.png",
        "backgroundColor": "#000000"
      },
      "package": "com.habyss.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/Habyss Logo.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you set custom profile pictures and goal backgrounds.",
          "cameraPermission": "The app accesses your camera to let you take profile pictures and goal backgrounds.",
          "microphonePermission": false
        }
      ],
      "expo-notifications",
      "expo-router",
      [
        "@stripe/stripe-react-native",
        {
          "merchantIdentifier": "merchant.com.yourcompany.habyss",
          "enableGooglePay": true
        }
      ],
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/Habyss Logo.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000000"
        }
      ],
      "expo-secure-store",
      "react-native-health-connect",
      "react-native-health",
      [
        "expo-calendar",
        {
          "calendarPermission": "The app needs to access your calendar to sync habits.",
          "remindersPermission": "The app needs to access your reminders to sync habits."
        }
      ],
      "expo-sqlite"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "9ce82041-a728-43a6-8b9a-1ffa254fbfb6"
      }
    }
  }
}